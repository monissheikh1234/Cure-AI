                <form action="/">
                    <button class="submit" type="submit">Close Prescription Form</button>
                </form>
            </div> -->
        </form>
        <div id="successMessage">Prescription submitted successfully! ðŸŽ‰</div>
    </div>

<script src="/js/addMedicine.js" ></script>
</body>
</html>
